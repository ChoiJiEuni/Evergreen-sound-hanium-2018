<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    tools:context="com.microsoft.projectoxford.face.samples.ui.MainActivity"
    android:gravity="center">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="너들나들 어플을 사용하시기 전에 \n반드시 네트워크를 켜주세요!!"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/mainInfoChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="등록되지 않은 인물은 식별할 수 없습니다.\n사진 촬영 전에 반드시 촬영할 인물을 등록하고 \n사용해주세요. "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:onClick="OnButtonClickedImage"
        android:textSize="20sp"
        android:text="사진촬영"
        style="@style/ButtonStyle"/>
    <TextView
        android:onClick="OnButtonClickedShow"
        android:text="사진열람"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        style="@style/ButtonStyle"/>
    <TextView
        android:text="인물등록"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:onClick="onButtonAddPerson"
        style="@style/ButtonStyle"/>

</LinearLayout>
