<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.microsoft.projectoxford.face.samples.db.RecordActivity"
    android:orientation="vertical"
    android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:text="녹음"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textColor="#00ffffff"
                    android:background="@drawable/record"
                    android:id="@+id/recordBtn"
                    style="@style/ButtonStyle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:text="띵"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    android:textColor="#00ffffff"
                    android:background="@drawable/recordstop"
                    android:id="@+id/recordStopBtn"
                    style="@style/ButtonStyle"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[녹음화면]"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingVertical="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="재생하기"
                            android:paddingVertical="20dp"
                            android:paddingHorizontal="40dp"
                            android:textSize="20dp"
                            android:background="#47e8b2"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginVertical="15dp"
                            android:layout_marginHorizontal="10dp"
                            android:enabled="false"
                            android:id="@+id/playBtn"
                            style="@style/ButtonStyle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="재생중지"
                            android:paddingVertical="20dp"
                            android:paddingHorizontal="40dp"
                            android:textSize="20dp"
                            android:background="#47e8b2"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginVertical="15dp"
                            android:layout_marginHorizontal="10dp"
                            android:visibility="invisible"
                            android:id="@+id/playStopBtn"
                            style="@style/ButtonStyle"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="저장"
                    android:background="#47e8b2"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:onClick="recordFinish"
                    android:enabled="false"
                    android:id="@+id/SaveBtn"
                    style="@style/ButtonStyle"/>
                </LinearLayout>
</LinearLayout>
