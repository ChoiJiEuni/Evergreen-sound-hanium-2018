<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.projectoxford.face.samples.db.LocationSearchActivity"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검색하시고 싶은 위치를 입력해주세요.\n입력은 자판이나 말하기버튼을 통한 \n음성입력으로 할 수 있습니다.\n자판을 이용하셨다면, 입력을 완료한 후 화면의 맨 아래에 위치한 위치 검색 시작 버튼을 눌러주세요."
        android:textSize="20sp" />

    <EditText
        android:id="@+id/locationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:textStyle="normal"
        android:hint="두번 클릭하면 자판이 생깁니다." />
    <TextView
        android:id="@+id/btnSpeak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="말하기버튼"
        android:textColor="#00ffffff"
        android:background="@drawable/ico_mic"
        android:layout_gravity="center"
        android:onClick="btnSpeak"
        />
    <TextView
        android:id="@+id/butLocationSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OnClickedfinsh"
        style="@style/ButtonStyle"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="위치 검색 시작"
        android:layout_marginVertical="40dp"/>
</LinearLayout>
