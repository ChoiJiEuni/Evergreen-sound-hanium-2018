<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.projectoxford.face.samples.db.renameLoc_Activity"
    android:orientation="vertical"
    android:paddingHorizontal="25dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="촬영 장소를 자판 또는 말하기 버튼을 이용해서 음성입력해주세요. "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="자판 사용에는 아래에 있는 위치변경 완료 버튼을 눌러주세요."/>
    </LinearLayout>

    <EditText
        android:id="@+id/locationRenameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:layout_marginVertical="20dp"
        android:textStyle="normal"
        android:hint="두번 클릭하면 자판이 생깁니다." />
    <TextView
        android:id="@+id/btnSpeak"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="말하기버튼"
        android:textColor="#00ffffff"
        android:background="@drawable/ico_mic"
        android:layout_gravity="center"
        android:onClick="btnSpeak"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/butLocationRename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnClickedRename"
            android:background="@color/button_enabled_background"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:paddingVertical="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="위치 변경 완료"
            android:layout_marginVertical="30dp"/>

    </LinearLayout>
</LinearLayout>
