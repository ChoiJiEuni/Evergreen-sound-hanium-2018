<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.microsoft.projectoxford.face.samples.db.searchActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="25dp">
    <TextView
        android:id="@+id/butDateSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="butDateSearch"
        style="@style/ButtonStyle"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"
        android:text="날짜 검색" />
    <TextView
        android:id="@+id/butLocationSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="butLocationSearch"
        style="@style/ButtonStyle"
        android:paddingVertical="20dp"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="위치 검색" />

    <TextView
        android:id="@+id/butPersonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="butPersonSearch"
        style="@style/ButtonStyle"
        android:paddingVertical="20dp"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="인물 검색" />
    <TextView
        android:id="@+id/butSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="searchResult"
        style="@style/ButtonStyle"
        android:paddingVertical="20dp"
        android:layout_marginVertical="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="검색필터 적용" />
</LinearLayout>
